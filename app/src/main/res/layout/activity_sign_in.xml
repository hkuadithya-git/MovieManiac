<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.adithyaupadhya.moviemaniac.login.SignInActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/sign_in_app_logo_dimen"
            android:layout_height="@dimen/sign_in_app_logo_dimen"
            android:layout_marginBottom="15dp"
            android:src="@drawable/app_icon" />

        <ImageView
            android:layout_width="@dimen/sign_in_tmdb_width"
            android:layout_height="@dimen/sign_in_tmdb_height"
            android:layout_marginBottom="30dp"
            android:src="@drawable/main_tmdb_logo" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/google_sign_in"
            android:layout_width="@dimen/sign_in_tmdb_width"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/facebook_sign_in"
            android:layout_width="@dimen/sign_in_fb_width"
            android:layout_height="50dp"
            android:paddingBottom="12.5dp"
            android:paddingTop="12.5dp"
            android:textSize="15sp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/progressLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:visibility="gone" />

</FrameLayout>
